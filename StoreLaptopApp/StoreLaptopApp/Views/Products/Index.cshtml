@model IEnumerable<StoreLaptopApp.Models.StoreEntities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 

   
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li><a href="@Url.Action("Index","Products")">Category</a></li>
                        <li><a href="#">Product </a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div id="main-content" class="col-md-8">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="products">
                                <p>
                                    
                                </p>
                                @foreach (var item in Model)
                                {


                                    <div class="col-lg-4 col-md-4 col-xs-12">
                                        <div class="product">

                                            <div class="image"><a href="@Url.Action("Details","Products", new { id= item.Id})"><img src="~/Asset/images/@item.Cover" alt="hinhlaptop" width="300" height="150" /></a></div>
                                          
                                            <div class="buttons">
                                                <a class="btn cart" href="@Url.Action("Index","Cart", new { id= item.Id})"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                                            </div>
                                            <div class="caption">
                                                <div class="name"><h3><a href="product.html"> @item.Name</a></h3></div>
                                                <div class="price"> @item.Price VNĐ</div>
                                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                            </div>
                                            <p>
                                                
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    
                    
                    <div class="row text-center">
                        <ul class="pagination">
                            <li class="active"><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                        </ul>
                    </div>
                </div>
                <div id="sidebar" class="col-md-4">
                    <div class="widget wid-categories">
                        <div class="heading"><h4>CATEGORIES</h4></div>
                        <div class="content">
                            <ul>
                                <li><a href="#">PC Computers</a></li>
                                <li><a href="#">Laptops & Notebooks</a></li>
                                <li><a href="#">Software</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="widget wid-brand">
                        <div class="heading"><h4>BRAND</h4></div>
                        <div class="content">
                            <label class="checkbox"><input type="checkbox" name="brand">Asus</label>
                            <label class="checkbox"><input type="checkbox" name="brand">Macbook</label>
                            <label class="checkbox"><input type="checkbox" name="brand">Acer</label>
                            <label class="checkbox"><input type="checkbox" name="brand">Dell</label>
                            <label class="checkbox"><input type="checkbox" name="brand">HP</label>
                            <label class="checkbox"><input type="checkbox" name="brand">MSI</label>
                        </div>
                    </div>
                    <div class="widget wid-product">
                        <div class="heading"><h4>LATEST</h4></div>
                        <div class="content">
                            <div class="product">
                                <a href="@Url.Action("Details","Products", new { id = 7})"><img src="~/Asset/images/laptopasusrodtrix.jpg" /></a>
                                <div class="wrapper">
                                    <h5><a href="@Url.Action("Details","Products", new { id = 7})">Asus RodTrix</a></h5>
                                    <div class="price">25.000.000</div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                </div>
                            </div>
                            <div class="product">
                                <a href="@Url.Action("Details","Products", new { id = 6})"><img src="~/Asset/images/laptopdellxps13.jpg" /></a>
                                <div class="wrapper">
                                    <h5><a href="@Url.Action("Details","Products", new { id = 6})">Dell XPS 13</a></h5>
                                    <div class="price">21.000.000</div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"> </span></div>
                                </div>
                            </div>
                            <div class="product">
                                <a href="@Url.Action("Details","Products", new { id = 8})"><img src="~/Asset/images/laptopasusvivobook.jpg" /></a>
                                <div class="wrapper">
                                    <h5><a href="@Url.Action("Details","Products", new { id = 8})">Asus vivo book</a></h5>
                                    <div class="price">$122</div>
                                    <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>        







